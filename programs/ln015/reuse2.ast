let Pos_Int = pattern (x:%integer) if x > 0.
let Neg_Int = pattern (x:%integer) if x < 0.

function fact
   with 0 do
      1
   with n:*Pos_Int do
      n * fact (n-1).
   with *Neg_Int do
      throw Error("negative value").
end

function sign
   with 0 do
      1
   with *Pos_Int do
      1
   with *Neg_Int do
      -1
end

